{
    "id": "kafka_cli",
    "version": "1.0.1",
    "name": "Kafka CLI tools",
    "description": "Installs the kafka cli tools",
    "options": {
        "version": {
            "type": "string",
            "proposals": [
                "2.13-4.1.1",
                "2.12-3.9.1"
            ],
            "default": "2.13-4.1.1",
            "description": "Select the scala and kafka version to install"
        }
    },
    "containerEnv": {
        "PATH": "/opt/local/kafka/bin:${PATH}"
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ]
}
